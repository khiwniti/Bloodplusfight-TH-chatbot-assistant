{
  "name": "line-oa-chatbot",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "mkdir -p dist && cp -R src config package.json dist/ && (cp .env dist/ 2>/dev/null || true)",
    "docker:build": "docker build -t line-oa-chatbot:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env line-oa-chatbot:latest",
    "db:seed": "node scripts/seed.js",
    "start:prod": "NODE_ENV=production node src/server.js"
  },
  "keywords": [
    "line",
    "chatbot",
    "customer-experience",
    "ai",
    "openrouter",
    "web-search",
    "research"
  ],
  "author": "",
  "license": "ISC",
  "description": "Line Official Account Chatbot with AI-powered responses, product catalog, healthcare information, and web research capabilities",
  "dependencies": {
    "@line/bot-sdk": "^7.5.0",
    "axios": "^1.4.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mongoose": "^8.15.1",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.16",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
